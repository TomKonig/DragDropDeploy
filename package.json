{
  "name": "dragdropdeploy-monorepo",
  "private": true,
  "version": "0.0.3",
  "license": "MIT",
  "workspaces": [
    "backend",
    "frontend",
    "shared"
  ],
  "scripts": {
    "generate:locales": "node scripts/build-locales.cjs",
    "build": "npm run generate:locales && npm run build -w @dragdropdeploy/shared && npm run build -w backend && npm run build -w frontend",
    "i18n:analyze": "node scripts/check-i18n-usage.cjs",
    "dev": "concurrently \"npm run dev -w backend\" \"npm run dev -w frontend\"",
    "lint": "eslint . --ext .ts,.tsx || true",
    "typecheck": "tsc -b",
    "format": "prettier --write .",
    "docs:scan": "node scripts/docs/scan-placeholders.js",
    "docs:env": "node scripts/docs/check-env-docs.js",
    "docs:changelog": "node scripts/docs/check-changelog-sync.js",
    "docs:roadmap": "node scripts/docs/check-roadmap-sync.js",
  "docs:api": "npm run openapi:gen -w backend && node scripts/docs/generate-openapi-md.cjs && npm run docs:typedoc && npm run docs:includes",
  "docs:includes": "node scripts/docs/inject-typedoc-includes.cjs",
  "docs:check": "npm run docs:scan && npm run docs:env && npm run docs:changelog && npm run docs:roadmap && npm run docs:api",
  "docs:typedoc": "npm run typedoc -w @dragdropdeploy/shared && npm run typedoc -w backend",
  "coverage:backend": "npm run test:ci -w backend -- --coverage",
  "coverage:frontend": "npm run test:coverage -w frontend",
  "coverage": "npm run coverage:backend && npm run coverage:frontend",
    "release:patch": "node scripts/release/bump-version.js patch",
    "release:minor": "node scripts/release/bump-version.js minor",
  "release:major": "node scripts/release/bump-version.js major",
  "release:patch:tag": "node scripts/release/bump-version.js patch --tag",
  "release:minor:tag": "node scripts/release/bump-version.js minor --tag",
  "release:major:tag": "node scripts/release/bump-version.js major --tag",
  "release:patch:push": "node scripts/release/bump-version.js patch --push",
  "release:minor:push": "node scripts/release/bump-version.js minor --push",
  "release:major:push": "node scripts/release/bump-version.js major --push"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "glob": "^11.0.3",
    "prettier": "^3.2.5",
    "typescript": "^5.4.0",
    "yaml": "^2.5.1"
  }
}
